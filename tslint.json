{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "no-console": false,
        "no-trailing-whitespace": true,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock",
            "check-postbrace"
        ],
        "prefer-const": true,
        "semicolon": true,
        "no-string-literal": true,
        "triple-equals": true,
        "eofline": true,
        "max-line-length": [
            true,
            140
        ],
        "no-consecutive-blank-lines": true,
        "quotemark": [
            true,
            "single"
        ],
        "promise-function-async": true,
        "curly": true,
        "no-shadowed-variable": true,
        "no-var-keyword": true,
        "use-isnan": true,
        "arrow-return-shorthand": true,
        "no-unnecessary-callback-wrapper": true,
        "class-name": true,
        "increment-decrement": false,
        "interface-name": true,
        "no-angle-bracket-type-assertion": true,
        "no-boolean-literal-compare": true,
        "space-before-function-paren": false,
        "space-within-parens": true,
        "unnecessary-else": true,
        "variable-name": false,
        "align": [
            true,
            "arguments",
            "elements",
            "members",
            "parameters",
            "statements"
        ],
        "arrow-parens": true,
        "import-spacing": true,
        "indent": [
            true,
            "spaces",
            2
        ],
        "no-invalid-this": false,
        "only-arrow-functions": false
    }
}
