@baseUrl = http://{{host}}:{{port}}/api/users
@userId = {{ AllUsers.response.body.$.data[0]._id }}
# @userId = {{ createdUser.response.body.$.data._id }}
@token = {{ tokenObject.response.body.$.data.token }}

### SIGNUP
# @name createdUser
POST {{baseUrl}}/auth/signup
Content-Type: application/json

{
  "firstName": "Test",
  "lastName": "Test",
  "email": "test@test",
  "username": "test",
  "password": "123456"
}


### LOGIN
# @name tokenObject
POST {{baseUrl}}/auth/login
Content-Type: application/json

{
  "username": "test",
  "password": "123456"
}


### GET ALL USERS
# @name AllUsers
GET {{baseUrl}}
Authorization: Bearer {{token}}


### GET USER BY ID
GET {{baseUrl}}/{{userId}}
Authorization: Bearer {{token}}


### UPDATE
PUT {{baseUrl}}/{{userId}}
Content-Type: application/json
Authorization: Bearer {{token}}

{
  "_id": "{{userId}}",
  "firstName": "Edited",
  "lastName": "Edited",
  "email": "test@test"
}


### REMOVE
DELETE {{baseUrl}}/{{userId}}
Authorization: Bearer {{token}}
